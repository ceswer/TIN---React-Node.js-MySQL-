<%- include('../../header.ejs') %>
    <main>
        <h2>
            <%= pageTitle %>
        </h2>
        <% if (drugs.length !=0) { %>
            <table class="table-list">
                <caption></caption>
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const drug of drugs) { %>
                        <tr>
                            <td>
                                <%= drug.id %>
                            </td>
                            <td>
                                <%= drug.name %>
                            </td>
                            <td>
                                <%= drug.description %>
                            </td>
                            <td>
                                <ul class="list-actions">
                                    <li><a href="/drugs/details/<%= drug.id %>"
                                            class="list-actions-button-details">About</a></li>
                                    <li><a href="/drugs/edit/<%= drug.id %>" class="list-actions-button-edit">Edit</a>
                                    </li>
                                    <li><a href="/drugs/delete/<%= drug.id %>"
                                            class="list-actions-button-delete">Delete</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <% } else { %>
                <p>There is no drugs in the list. Try to add some!</p>
                <% } %>

                    <div class="div-button-add">
                        <a href="/drugs/add" class="button-add">Add new drug</a>
                    </div>
    </main>
    <%- include('../../footer.ejs') %>