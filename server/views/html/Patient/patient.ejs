<%- include('../../header.ejs') %>
    <main>
        <h2>
            <%= pageTitle %>
        </h2>

        <% if (patients.length !=0) { %>
            <table class="table-list">
                <caption></caption>
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Phone number</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var patient of patients) { %>
                        <tr>
                            <td>
                                <%= patient.id %>
                            </td>
                            <td>
                                <%= patient.person.name %>
                            </td>
                            <td>
                                <%= patient.person.surname %>
                            </td>
                            <td>
                                <%= patient.phoneNumber %>
                            </td>
                            <td>
                                <ul class="list-actions">
                                    <li><a href="/patients/details/<%= patient.id %>"
                                            class="list-actions-button-details">About</a></li>
                                    <li><a href="/patients/edit/<%= patient.id %>"
                                            class="list-actions-button-edit">Edit</a></li>
                                    <li><a href="/patients/delete/<%= patient.id %>"
                                            class="list-actions-button-delete">Delete</a></li>
                                </ul>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
            <% } else { %>
                <p>There is nothing in the list! Try to add some patients!</p>
                <% } %>
                    <div class="div-button-add">
                        <a href="/patients/add" class="button-add">Add new patient</a>
                    </div>
    </main>
    <%- include('../../footer.ejs') %>